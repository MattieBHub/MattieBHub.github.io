{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
      "text": "IMF lending Outstanding",
      "subtitle":"Credit outstanding to all members, SDRs (billions $) - Sources: FT, IMF",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"},
  
  "data":{"url": "https://raw.githubusercontent.com/MattieBHub/MattieBHub.github.io/main/Uni_Work/Data/Portfolio/data_IMF_creditOutstanding.csv"},

  "transform": [
    {"calculate": "datum.Totals/1000000000", "as": "billions"}
  ],
  
  "height":300,
  "width":300,

  "mark": {
    "type": "bar",
    "color": "violet"},

"encoding": {
     "x": {
       "field": "Year",
       "type": "temporal",
       "axis": {
         "title": null,
         "grid": false,
         "ticks": false,
         "labelAngle": 45}},

      "y": {
        "field": "billions",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false}}
}
}